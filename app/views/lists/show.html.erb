<div class=" mb-4 text-white show-banner" >
 <%= cl_image_tag @list.photos.first.key %>
  <div class="col-md-6 px-0 position-absolute">
    <h1 class="display-2"><%= @list.name %></h1>
  </div>
</div>
<div class="container w-75 d-flex justify-content-end py-3">
  <%= link_to "Add a movie", new_list_bookmark_path(list_id: @list.id), class: "btn btn-success" %>
</div>
<div class="container w-75 d-flex justify-content-center gap-2">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 23rem;">
      <img src=<%= bookmark.movie.poster_url%>  class="card-img-top" alt="">
      <div class="card-body">
        <h5 class="card-title"><strong><%= bookmark.movie.title %></strong> -  <%= bookmark.movie.rating %> ⭐️</h5>
        <p class="card-text text-muted"><%= bookmark.movie.overview %></p>
      </div>
      <div class="d-flex justify-content-between">
        <p class='px-3'><small><strong>“<%= bookmark.comment %></strong></small></p>
        <%= link_to 'Delete', bookmark_path(id: bookmark.id), method: :delete, class: 'text-danger px-3 pb-3' %>
      </div>
    </div>
  <% end %>
</div>

